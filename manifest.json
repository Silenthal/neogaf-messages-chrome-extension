{
	"name": "NeoGAF Messages",
	"version": "1.6",
	"manifest_version": 2,
	"description": "Notifies you with a desktop notification whenever you receive a new private message on NeoGAF.",
	"background": {
		"page": "background.html"
	},
	"options_page": "options.html",
	"permissions": ["notifications","*://www.neogaf.com/forum/usercp.php"],
	"icons": {
		"48": "48.png",
		"128": "128.png"
	},
	"web_accessible_resources": ["128.png"]
}